            "type": "node",
            "request": "launch",
            "name": "Launch Dev Server",
            "program": "/usr/local/bin/npm",
            "args": [
                "run-script", "dev"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Build",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "build"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Build & Debug",
            "preLaunchTask": "npm: build",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "debug"
            ],
            "port": 9229
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "debug"
            ],
            "port": 9229
        }
    ]
